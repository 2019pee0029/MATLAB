function gf = gradddivW(Wxk, varargin)
% function gf = gradddivW(Wxk, varargin)
% Wxk_r = reshape(Wxk,1,x*k) -> row vector
% Vxt = varargin{1};  %data
% Hkt = varargin{2};  %H matrix
Vxt = varargin{1};  %data
Hkt = varargin{2};  %H matrix

sHkt = repmat((sum(Hkt,2))',size(Vxt,1),1);
gf = sHkt - (Vxt./(Wxk*Hkt))*Hkt'; %d/dw(d-divergence)
